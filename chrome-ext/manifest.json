{
	"manifest_version": 2,

	"name": "Keybase Login Extension",
	"description": "This extension allows a user to login to a website that supports Keybase public key login",
	"version": "0.1.2",
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Keybase Login Extension",
		"default_popup": "popup.html"
	},
	"permissions": [
		"declarativeContent",
		"activeTab",
		"storage",
		"https://keybase.io/",
		"<all_urls>"
	]
}
